@model IEnumerable<atelier3.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!-- Formulaire de recherche pour les étudiants -->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolAdress)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolAdress)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SchoolID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SchoolID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SchoolID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
